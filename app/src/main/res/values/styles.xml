<resources>
    <!--欢迎页面主题-->
    <style name="AppTheme.WelcomePage" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/welcome_page</item>
    </style>

    <!-- 所有页面的底部提交按钮 -->
    <style name="BottomSubmitButtom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/selector_submit</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">@color/text_color_5</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
